import requests

def get_weather(city):
    api_key = "b6907d289e10d714a6e88b30761fae22"  # âœ… Demo key for testing only
    base_url = "https://samples.openweathermap.org/data/2.5/weather"

    params = {
        "q": city,
        "appid": api_key,
        "units": "metric"
    }

    response = requests.get(base_url, params=params)
    data = response.json()

    if response.status_code == 200:
        city_name = data['name']
        country = data['sys']['country']
        weather_desc = data['weather'][0]['description']
        temperature = data['main']['temp']
        humidity = data['main']['humidity']
        wind_speed = data['wind']['speed']

        print(f"\nğŸ“ Location: {city_name}, {country}")
        print(f"ğŸŒ¤ï¸ Weather: {weather_desc}")
        print(f"ğŸŒ¡ï¸ Temperature: {temperature}Â°C")
        print(f"ğŸ’§ Humidity: {humidity}%")
        print(f"ğŸ’¨ Wind Speed: {wind_speed} m/s")
    else:
        print("\nâŒ City not found. Please enter a valid city name.")

print("ğŸŒ¦ï¸ Welcome to the Weather App ğŸŒ¦ï¸")
user_city = input("Enter your city name: ")
get_weather(user_city)
